   }
  
  ,{pns, ".*",
      {git, "https://github.com/fogfish/pns", {branch, master}}
   }
  
  ,{pipe, ".*",
      {git, "https://github.com/kfsm/pipe", {branch, 'flow-control'}}
   }

  ,{datum, ".*",
      {git, "https://github.com/fogfish/datum", {branch, master}}
   }

  ,{htstream, ".*",
      {git, "https://github.com/kfsm/htstream", {branch, master}}
   }

   %% RnD utility
  ,{eep, ".*",
      {git, "https://github.com/virtan/eep.git", {branch, master}}
   }

  ,{drift, ".*",
      {git, "https://github.com/fogfish/drift.git", {branch, master}}
